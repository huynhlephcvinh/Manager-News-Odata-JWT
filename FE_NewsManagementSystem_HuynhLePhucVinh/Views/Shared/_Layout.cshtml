<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FE_NewsManagementSystem_HuynhLePhucVinh</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FE_NewsManagementSystem_HuynhLePhucVinh.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Navbar brand and toggle button remain the same -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Navigation items remain the same -->
                    </ul>
                    <ul class="navbar-nav">
                        @{
                            var token = Context.Session.GetString("JWTToken");
                            var name = Context.Session.GetString("Name");
                        }
                        @if (!string.IsNullOrEmpty(token))
                        {
                                <li class="nav-item">
                                    <span class="nav-link text-dark">Welcome, @(string.IsNullOrEmpty(name) ? "User" : name)</span>
                                </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Menu" asp-action="Index">
                                    <button class="btn btn-outline-primary">Menu</button>
                                </a>
                            </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Logout">
                                        <button class="btn btn-outline-danger">Logout</button>
                                    </a>
                                </li>
                        }
                        else
                        {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Login">
                                        <button class="btn btn-outline-primary">Login</button>
                                    </a>
                                </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - FE_NewsManagementSystem_HuynhLePhucVinh - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>